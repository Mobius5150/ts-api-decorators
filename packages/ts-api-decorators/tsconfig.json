{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "dist",
		"rootDir": "src",
		
		"sourceMap": true,
		"strict": false,
		"esModuleInterop": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": true,
		"downlevelIteration": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"test/**/*.ts",
		"source-generators"
	]
}